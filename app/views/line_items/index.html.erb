<p id="notice"><%= notice %></p>

<h1>Line Items</h1>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.image %></td>
        <td><%= line_item.name %></td>
        <td><%= line_item.description %></td>
        <td><%= line_item.price %></td>
        <td><%= link_to 'Show', store_line_item %></td>
        <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
        <td><%= link_to 'Destroy', store_line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

